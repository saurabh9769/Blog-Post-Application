<h4>Add a comment:</h4>

<%= form_for [@blog, @comment], remote: true do |f| %>
  <%= f.label :author_name , "Your Name" %><br/>
  <%= f.text_field :author_name %><br/>
  <%= f.label :body , "Your Comment" %><br />
  <%= f.text_area :body %>

  <div class="actions">
    <%= f.submit %><br>
  </div>
<% end %>

