<div class="panel panel-default">
  <div class="panel-heading"> <h3> Welcome to Blog Post </h3></div>
  <br>
  <br>
  <div class="panel-body">
    <% if user_signed_in? %>
      <%= link_to "View My Blogs" , blogs_path %> |
      <%= link_to "Log Out" , destroy_user_session_path , method: :delete %>
    <% else %>
      <%= link_to "Log In" , new_user_session_path %>
    <% end %>
    <br>
    <table class="table table-hover table-bordered" >
      <tr>
        <th style="text-align: center">Title</th>
        <th style="text-align: center">Text</th>
        <th colspan="2" style="text-align: center">Manage</th>
      </tr>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= link_to blog.title , blog_path(blog) %></td>
          <td><%= blog.body %></td>
          <% if user_signed_in? && blog.user_id == current_user.id %>
          	<td><%= link_to "Edit", edit_blog_path(blog) %> | <%= link_to "Delete", blog_path(blog) , method: :delete , data: {confirm: "You want to delete the blog"} %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>