<div class="container">
  <%= form_for(@blog) do |f| %>
    <ul>
    <% @blog.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <div class="container-fluid">
      <!-- <div class="form-group col-md-6" style="float: left"> -->
      <div class="form-group row">
        <div class="col-sm-3">
          <!-- <input type="email" class="form-control" id="inputEmail3" placeholder="Email"> -->
          <%= f.label :title , class: "col-sm-2 col-form-label col-md-6" %><br />
          <%= f.text_field :title , :class => "form-control" , :placeholder => "Blog Title" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :body , class: "col-sm-2 col-form-label"%><br />
          <%= f.text_area :body , :class => "form-control" , placeholder: "Blog Body" %>
        </div>
      </div>
      <br>
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
          <%= f.submit %>
        </div>
      </div>
    </div>
  <% end %>
</div>