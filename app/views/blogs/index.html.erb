<div class="panel panel-default">
  <div class="panel-heading"> <h3> All Articles </h3></div>
  <br>
  <br>
  <div class="panel-body">
    <table class="table table-bordered table-hover" style="width: 50%" >
      <tr>
        <th>Title</th>
        <th>Text</th>
      </tr>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= link_to blog.title , blog_path(blog) %></td>
          <td><%= blog.body %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>


